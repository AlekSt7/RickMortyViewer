<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RickMortyViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_dark</item>
        <item name="colorAccent">@color/green_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:indeterminateTint" tools:targetApi="l">@color/grey</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <!-- Other -->
        <item name="android:colorEdgeEffect">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/Theme.RickMortyViewer.Button</item>
    </style>

    <style name="Theme.RickMortyViewer.Night" parent="Theme.RickMortyViewer">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:indeterminateTint" tools:targetApi="l">@color/white</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Other -->
        <item name="android:colorEdgeEffect">@color/white_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ToolBar style -->
    <style name="Theme.RickMortyViewer.ToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/toolbar_background_corner</item>
    </style>

    <!-- Button style -->
    <style name="Theme.RickMortyViewer.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.RickMortyViewer.Launcher" parent="Theme.RickMortyViewer">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


</resources>